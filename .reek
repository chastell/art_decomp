DuplicateMethodCall:
  exclude:
    - ArtDecomp::ArchSizer#min_quarters
    - ArtDecomp::FunctionDecomposer#decompose
    - ArtDecomp::Seps#self.from_column

IrresponsibleModule:
  enabled: false

LongParameterList:
  exclude:
    - ArtDecomp::FSM#self.from_puts

NestedIterators:
  max_allowed_nesting: 2

TooManyStatements:
  exclude:
    - ArtDecomp::ArchSizer#max_quarters
    - ArtDecomp::Seps#self.from_column

UncommunicativeModuleName:
  exclude:
    - ArtDecomp::B

UncommunicativeParameterName:
  exclude:
    - ArtDecomp::Arch#self.[]
    - ArtDecomp::CircuitPresenter::WiresPresenter::WirePresenter::PinPresenter#suffix

UncommunicativeVariableName:
  exclude:
    - ArtDecomp::Circuit::Wirer#ins_wires
    - ArtDecomp::Circuit::Wirer#outs_wires
    - ArtDecomp::CircuitPresenter::WiresPresenter::WirePresenter::PinPresenter#labels
    - ArtDecomp::FunctionDecomposer::Parallel#decompositions
    - ArtDecomp::FunctionDecomposer::Parallel#merged
    - ArtDecomp::KISSDecomposer#decompose
    - ArtDecomp::RequiredPutsFilter#initialize
    - ArtDecomp::Seps#&
    - ArtDecomp::Seps#-
    - ArtDecomp::Seps#self.from_column
    - ArtDecomp::Seps#|

UtilityFunction:
  exclude:
    # https://github.com/troessner/reek/issues/27
    - ArtDecomp::B#[]
    - ArtDecomp::CircuitDecomposer#decompose
    - ArtDecomp::FunctionDecomposer#decompose
    - ArtDecomp::FunctionMerger#merge
    - ArtDecomp::Seps::MatrixNormaliser#normalise
